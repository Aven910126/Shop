@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>商品詳細資料</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            名稱
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            進貨日期
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            商品簡介
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Introduce)
        </dd>
        <dt class="col-sm-2">
            價格
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            數量
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>
</div>
