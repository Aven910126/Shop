@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>存貨系統</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">進貨</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" class="btn btn-primary" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                商品名稱
            </th>
            <th>
                進貨日期
            </th>
            <th>
                價格
            </th>
            <th>
                數量
            </th>
            <th>商品簡介
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Introduce)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">修改存貨</a> |
                <a asp-action="Details" asp-route-id="@item.Id">詳細</a>
                <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
            </td>
        </tr>
        }
    </tbody>
</table>
